#
# FinovaBank Microservices Environment Variables
# Based on review of backend/pom.xml and backend/auth-service/src/main/resources/application.yml
# NOTE: Spring Boot applications typically use environment variables to override
# properties in application.yml.
#

# -----------------------------------------------------------------------------
# 1. APPLICATION & SECURITY
# -----------------------------------------------------------------------------
# Secret key for signing JWTs (CRITICAL)
# Default fallback is in application.yml, but should be overridden here.
JWT_SECRET=
# Spring Boot profile (e.g., dev, prod, test)
SPRING_PROFILES_ACTIVE=dev
# Server port for the specific service (e.g., 8011 for auth-service)
SERVER_PORT=

# -----------------------------------------------------------------------------
# 2. DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
# Database connection string for the service (e.g., auth-service)
# Example: jdbc:postgresql://host:port/dbname
SPRING_DATASOURCE_URL=
SPRING_DATASOURCE_USERNAME=
SPRING_DATASOURCE_PASSWORD=

# -----------------------------------------------------------------------------
# 3. SERVICE DISCOVERY (Eureka)
# -----------------------------------------------------------------------------
# Eureka Server URL
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8001/eureka/

# -----------------------------------------------------------------------------
# 4. CACHING & SESSION (Redis)
# -----------------------------------------------------------------------------
# Redis Host
SPRING_REDIS_HOST=localhost
# Redis Port
SPRING_REDIS_PORT=6379

# -----------------------------------------------------------------------------
# 5. MESSAGE BROKER (Kafka)
# -----------------------------------------------------------------------------
# Kafka Broker List (Implied by spring-kafka dependency)
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------------------------------------------------------
# 6. EXTERNAL SERVICES (Implied by banking architecture)
# -----------------------------------------------------------------------------
# Example: Payment Gateway API Key
PAYMENT_GATEWAY_API_KEY=
# Example: KYC/AML Provider API Key
KYC_PROVIDER_API_KEY=
# Example: Email Service Credentials
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USERNAME=
EMAIL_PASSWORD=

# -----------------------------------------------------------------------------
# 7. CLOUD CONFIG (If using Spring Cloud Config Server)
# -----------------------------------------------------------------------------
# SPRING_CLOUD_CONFIG_URI=http://localhost:8888
