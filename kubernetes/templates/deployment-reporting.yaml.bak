---

# templates/deployment-reporting.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: reporting-service
  labels:
    app: reporting-service
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: reporting-service
  template:
    metadata:
      labels:
        app: reporting-service
    spec:
      containers:
        - name: reporting-service
          image: {{ .Values.image.repository }}/reporting-service:{{ .Values.image.tag }}
          ports:
            - containerPort: 8093