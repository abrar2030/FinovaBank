---

# templates/deployment-compliance.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: compliance-service
  labels:
    app: compliance-service
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: compliance-service
  template:
    metadata:
      labels:
        app: compliance-service
    spec:
      containers:
        - name: compliance-service
          image: {{ .Values.image.repository }}/compliance-service:{{ .Values.image.tag }}
          ports:
            - containerPort: 8091