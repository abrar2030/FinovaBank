---

# templates/deployment-loan-management.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: loan-management
  labels:
    app: loan-management
spec:
  replicas: {{ .Values.replicaCount }}
  selector:
    matchLabels:
      app: loan-management
  template:
    metadata:
      labels:
        app: loan-management
    spec:
      containers:
        - name: loan-management
          image: {{ .Values.image.repository }}/loan-management:{{ .Values.image.tag }}
          ports:
            - containerPort: 8090