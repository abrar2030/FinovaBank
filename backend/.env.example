# FinovaBank Backend Environment Variables
# Copy this file to .env and update with your actual values

# Eureka Server
EUREKA_USER=eureka-user
EUREKA_PASSWORD=change-me-in-production
EUREKA_URL=http://localhost:8001/eureka/
EUREKA_ENABLED=false

# Database Configuration (PostgreSQL for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finovabank
DB_USERNAME=finova_user
DB_PASSWORD=change-me-in-production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=change-me-to-a-secure-random-string-min-256-bits
JWT_EXPIRATION=3600000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@finovabank.com

# Application Profiles
SPRING_PROFILES_ACTIVE=dev

# Logging
LOG_LEVEL=INFO
