# FinovaBank Backend Environment Variables
# Copy this file to .env and update with your actual values

# ===============================================
# Eureka Server Configuration
# ===============================================
EUREKA_HOSTNAME=localhost
EUREKA_USERNAME=eureka-user
EUREKA_PASSWORD=change-me-in-production
EUREKA_URL=http://localhost:8001/eureka/
EUREKA_ENABLED=false

# ===============================================
# Database Configuration
# ===============================================
# For production: Use PostgreSQL
DB_URL=jdbc:postgresql://localhost:5432/finovabank
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finovabank
DB_USERNAME=finova_user
DB_PASSWORD=change-me-in-production

# For development: H2 is preconfigured in application-dev.yml
# No additional configuration needed for H2

# ===============================================
# Redis Configuration
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===============================================
# JWT Security Configuration
# ===============================================
# IMPORTANT: Use a strong, random secret key (minimum 256 bits)
# Generate with: openssl rand -base64 32
JWT_SECRET=change-me-to-a-secure-random-string-min-256-bits-use-openssl-rand-base64-32
JWT_EXPIRATION=3600000

# ===============================================
# Kafka Configuration
# ===============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ===============================================
# Email/Mail Configuration (Notification Service)
# ===============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_FROM=noreply@finovabank.com

# ===============================================
# Application Profiles
# ===============================================
SPRING_PROFILES_ACTIVE=dev

# ===============================================
# Logging Configuration
# ===============================================
LOG_LEVEL=INFO

# ===============================================
# Optional: External Service URLs
# ===============================================
# Add any external service URLs or API keys here
