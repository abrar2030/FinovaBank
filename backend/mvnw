#!/bin/sh
# ----------------------------------------------------------------------------
# Maven Wrapper startup script
# ----------------------------------------------------------------------------

set -e

MAVEN_WRAPPER_JAR=".mvn/wrapper/maven-wrapper.jar"
MAVEN_WRAPPER_URL="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.2.0/maven-wrapper-3.2.0.jar"

# Set base directory
BASEDIR=$(dirname "$0")
BASEDIR=$(cd "$BASEDIR" && pwd)

if [ ! -f "$MAVEN_WRAPPER_JAR" ]; then
  echo "Downloading Maven Wrapper..."
  mkdir -p .mvn/wrapper
  if command -v curl > /dev/null; then
    curl -L -o "$MAVEN_WRAPPER_JAR" "$MAVEN_WRAPPER_URL"
  elif command -v wget > /dev/null; then
    wget -O "$MAVEN_WRAPPER_JAR" "$MAVEN_WRAPPER_URL"
  else
    echo "Error: curl or wget required to download Maven Wrapper"
    exit 1
  fi
fi

exec java -Dmaven.multiModuleProjectDirectory="$BASEDIR" -cp "$MAVEN_WRAPPER_JAR" org.apache.maven.wrapper.MavenWrapperMain "$@"
